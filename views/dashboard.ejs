<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Dashboard</title>
    <style>
      one {
        display: flex;
      }
      body {
        background: url(images/p1.jpg);
        background-size: cover;
      }
      .topnav {
        background-color: #333;
        overflow: hidden;
      }

      /* Style the links inside the navigation bar */
      .topnav a,
      label {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .btn {
        border: none;
        width: 190px;
        background: white;
        color: #000;
        font-size: 16px;
        text-align: center;
        padding: 10px 0;
        border-radius: 15px;
        cursor: pointer;
      }
      .btn:hover {
        color: #fff;
        background-color: lightgreen !important;
      }

      /* Change the color of links on hover */
      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      /* Add a color to the active/current link */
      .topnav a.active {
        background-color: #4caf50;
        color: white;
      }

      #notif h1 {
        color: white;
        font-size: 50px;
        text-align: center;
      }
    </style>
  </head>

  <script>
    function search() {
      location.href = "/search";
    }
    function upload() {
      location.href = "/upload";
    }
    function auction() {
      location.href = "/auctionlist";
    }
  </script>
  <body>
    <div class="topnav">
      <label style="font-family:Verdana, Geneva, Tahoma, sans-serif"
        >REAL ESTATE MANAGEMENT SYSTEM</label
      >
      <a href="/logout" style="float: right;">Logout</a>
      <label
        style="float: right;font-family:Verdana, Geneva, Tahoma, sans-serif"
        >Welcome <%=name%></label
      >
      <br style="clear: left;" />
    </div>
    <br /><br />
    <div>
      <div
        class="btn"
        onclick="search()"
        style="float:left;font-size:30px;width:400px;height:200px;margin-left: 40px;background-color: #F7AEF8;color: white;"
      >
        <br />
        <br />
        Search Property
      </div>
      <div
        class="btn"
        onclick="upload()"
        style="float:left;font-size:30px;width:400px;height:200px;margin-left:115px;background-color: #B388EB;color:white"
      >
        <br /><br />
        Upload Property
      </div>
      <div
        class="btn"
        onclick="auction()"
        style="float:right;font-size:30px;width:400px;height:200px;margin-right:40px;background-color: #8093F1;color: white;"
      >
        <br /><br />
        Join Auction
      </div>
      <br style="clear: left;" />
    </div>

 

    <%if(data==1){%>
    <div id="notif">
      <h1>You have got a tenant interest !!!</h1>
      <form action="dashboard" method="POST">
        <!-- <button type="submit">Enter Chat</button>-->
        <input
          type="submit"
          class="btn"
          style="float:left;font-size:30px;width:200px;height:50px;margin-left:650px;background-color:lightsalmon;color:white" value="Enter Chat"
        >
          
        </div>
      </form>
    </div>
    <%}%>
    <%if(data==2){%>
    <div id="notif">
      <h1>Your property has been sold !!!</h1>
    </div>
    <%}%>
  </body>
</html>
